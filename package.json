{
  "name": "@sidia/sidia-framework",
  "version": "1.0.0",
  "description": "Sidia Discord Bot",
  "author": "Marvin Fischer <admin@sidia.net>",
  "packageManager": "yarn@4.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/SidiaDevelopment/discord-bot",
    "directory": "."
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "dev": "ts-node scripts/dev.ts",
    "turbo": "turbo build --output-logs new-only",
    "turbo:watch": "nodemon",
    "turbo:full": "turbo build test lint --output-logs new-only",
    "gen": "turbo gen workspace --copy @sidia/package-template --type package"
  },
  "dependencies": {
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/eslint": "^8",
    "@types/jest": "^29.5.8",
    "@types/nodemon": "^1.19.5",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  }
}
